{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Next: Dev",
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "args": ["dev"],
      "autoAttachChildProcesses": true,
      "restart": true,
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Next: Build",
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "args": ["build"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Next: Start",
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "args": ["start"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Open Next.js App in Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "breakOnLoad": true
    }
  ]
}
